{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Desktop",
  "version": "0.1.0",
  "identifier": "com.milhy545.claude-desktop",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devUrl": "../src",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Claude Desktop",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "fileDropEnabled": true,
        "url": "index.html"
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "tooltip": "Claude Desktop"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["webkit2gtk-4.1"],
        "desktopTemplate": "linux/claude-desktop.desktop"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "category": "Utility",
    "shortDescription": "Claude AI Desktop Client for Linux",
    "longDescription": "Lightweight Tauri-based desktop client for Claude AI with MCP server support. Designed specifically for Linux users who want a fast, memory-efficient alternative to Electron."
  },
  "plugins": {}
}
